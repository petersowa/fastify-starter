{
	"extends": "@tsconfig/svelte/tsconfig.json",

	"include": ["src/js/**/*", "src/types/**/*.ts"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*", "dist/*"],
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "/",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"lib": ["DOM", "ESNext"],
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "node"
	}
}
