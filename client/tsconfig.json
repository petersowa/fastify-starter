{
	"extends": "@tsconfig/svelte/tsconfig.json",

	"include": ["src/js/**/*", "src/node_modules"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "/",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"target": "ESNext"
	}
}
