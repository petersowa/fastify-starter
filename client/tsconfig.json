{
	"extends": "@tsconfig/svelte/tsconfig.json",

	"include": ["src/js/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "/",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"module": "ESNext"
	}
}
