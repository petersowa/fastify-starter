{
	"name": "fastify-starter",
	"version": "0.6.0",
	"description": "Backend API Fastify server with Typescript support.",
	"main": "dist/app.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "npm run copy-static-assets && concurrently \"npm run watch-ts\" \"nodemon --trace-warnings --ignore data/ --ignore public/ --ignore client/ dist/app.js\" \"npm run dev:client\"",
		"start": "npm run serve",
		"serve": "node dist/app.js",
		"watch-node": "nodemon --ignore data/ dist/app.js",
		"watch-ts": "tsc -w",
		"build:do": "npm install --production=false && npm run build && npm prune --production",
		"build": "npm run build:server && npm run build:client",
		"build:server": "npm run build-ts && npm run copy-static-assets",
		"build:client": "cd client/ && npm install && npm run build",
		"build-ts": "tsc",
		"lint": "eslint . --ext .ts --ext .js",
		"copy-static-assets": "ts-node copyStaticAssets.ts",
		"dev:client": "npm run dev --prefix client/",
		"bump": "npm version minor --force"
	},
	"keywords": [
		"fastify",
		"starter",
		"node",
		"http-server",
		"svelte"
	],
	"author": "Peter Sowa",
	"license": "ISC",
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"@fastify/csrf": "^6.1.0",
		"@fastify/csrf-protection": "^6.1.0",
		"@fastify/formbody": "^7.4.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/mongodb": "^6.2.0",
		"@fastify/session": "^10.1.1",
		"@fastify/static": "^6.6.0",
		"@fastify/view": "^7.3.0",
		"axios": "^1.3.2",
		"bcrypt": "^5.0.1",
		"chalk": "^4.1.2",
		"connect-mongo": "^4.6.0",
		"connect-redis": "^6.1.3",
		"dotenv": "^16.0.3",
		"express-session": "^1.17.1",
		"fastify": "^4.11.0",
		"fastify-csrf": "^3.0.1",
		"fastify-flash": "^3.1.0",
		"fastify-plugin": "^4.4.0",
		"fastify-socket.io": "^4.0.0",
		"handlebars": "^4.7.7",
		"ioredis": "^5.3.0",
		"mongoose": "^6.8.3",
		"sass": "^1.57.1",
		"socket.io": "^4.0.1"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.14.7",
		"@types/bcrypt": "^5.0.0",
		"@types/connect-redis": "^0.0.19",
		"@types/express-session": "^1.17.5",
		"@types/node": "^18.11.19",
		"@types/shelljs": "^0.8.11",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.0.0",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.33.0",
		"eslint-plugin-eslint-plugin": "^5.0.8",
		"eslint-plugin-prettier": "^4.2.1",
		"mocha": "^10.2.0",
		"node-sass": "^8.0.0",
		"shelljs": "^0.8.4",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.9.4",
		"webpack": "^5.41.1",
		"webpack-cli": "^5.0.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/petersowa/fastify-starter.git"
	},
	"bugs": {
		"url": "https://github.com/petersowa/fastify-starter/issues"
	},
	"homepage": "https://github.com/petersowa/fastify-starter#readme"
}
